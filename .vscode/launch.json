{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MTEB Conversion Tool",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/model-data/mteb-to-codeweaver.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true
    },
    {
      "name": "Debug CodeWeaver CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/codeweaver/cli/__main__.py",
      "args": [
        "${command:pickArgs}"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "CW Module As Script",
      "type": "debugpy",
      "program": "${file}",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
      "args": "${command:pickArgs}"
    },
    {
      "name": "Debug Selection",
      "type": "debugpy",
      "request": "launch",
      "program": "${selectedText}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
      "args": "${command:pickArgs}",
      "showReturnValue": true
    },
    {
      "name": "Debug Fetch Grammars Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/language-support/get-langs.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Lang Mapper Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/language-support/build-language-mappings.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
