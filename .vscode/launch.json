{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MTEB Conversion Tool",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/mteb_to_codeweaver.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "stopOnEntry": true,
        },
        {
            "name": "Debug CodeWeaver CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/codeweaver/cli/app.py",
            "args": [
                "server"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Fetch Grammars Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/fetch_grammars.py",
            "console": "integratedTerminal",
        }
    ]
}