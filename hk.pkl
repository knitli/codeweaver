amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Builtins.pkl"

local linters = new Mapping<String, Step> {
    // uses builtin prettier linter config
    ["actionlint"] = Builtins.actionlint

    ["taplo"] = Builtins.taplo
        // yaml
    ["yq"] = new Step {
      glob = List( "*.{.yaml,yml,yaml,.yml,json,jsonc,.json,.jsonc}")
      batch = false
      check  = "echo {{ files }} | rust-parallel -d stderr -i - --no-run-if-empty yq -P eval '.' >/dev/null"
      fix = "echo {{ files }} | rust-parallel -d stderr -i - --no-run-if-empty yq -iP --indent=2 '.' "
    }

    ["typos"] = new Step {
        workspace_indicator = "_typos.toml"
        glob = List( "*README", "*.{login,astro,bash,bash_logout,bashrc,browserlistrc,conf,config,csh,css,cts,fish,gitattributes,gitmodules,html,htmx,ini,j2,jinja,jinja2,json,json5,jsonc,jsonl,ksh,md,mdown,mdtext,mdtxt,mdwn,mdx,mk,mkd,mts,nix,nu,pkl,profile,py,quokka,rs,sass,scss,sh,sh,shellcheckrc,sql,sqlite,stylelintrc,svelte,tcsh,toml,ts,tsx,txt,yaml,yml,zlogin,zlogout,zprofile,zsh,zshenv,zshrc}", "*Dockerfile*", "*Makefile*", "*makefile*", "CHANGELOG*", "CODE_OF_CONDUCT*", "CONTRIBUTING*", "HACKING*", "LICENSE", "README*", "SECURITY*", "UNLICENSE").filter((f) -> !f.endsWith("hf_models.json") && !f.contains("external"))
        check = "typos -j 8 --file-list {{ files }}"
        fix = "typos --write-changes {{ files }}"
    }

    ["fix-ruff-patterns"] = new Step {
        glob = "src/**/*.py"
        fix = "./scripts/code-quality/fix-ruff-patterns.sh {{ files }}"
        check = "./scripts/code-quality/fix-ruff-patterns.sh --dry-run {{ files }}"
    }

    ["ruff"] = (Builtins.ruff) {
        fix = "ruff check --fix {{ files }} && ruff check --select I --fix {{ files }} && ruff format {{ files }}"
    }

    ["reuse"] = new Step {
        check = "reuse lint"
        interactive = true
        fix = "./scripts/code-quality/update-licenses.py add --interactive {{ files }}"
    }

    ["shellcheck"] = new Step {
            batch = true
            glob = List("*.sh", "*.bash")
            check = "shellcheck {{ files }}"
    }

    ["shfmt"] = Builtins.shfmt

    // define a custom linter
    ["pkl"] = new Step{
        glob = "*.pkl"
        check = "pkl eval {{files}} >/dev/null"
    }

    ["add-marks"] = new Step {
        glob = "tests/**/*.py"
        fix = "./scripts/testing/apply-test-marks.py {{ files }}"
    }

}

hooks {
    ["pre-commit"] {
        fix = true    // automatically modify files with available linter fixes
        steps = linters
    }
    // instead of pre-commit, you can instead define pre-push hooks
    ["pre-push"] {
        steps = linters
    }

    ["fix"] {
        fix = true
        steps = linters
    }
    ["check"] {
        steps = linters
    }
}
