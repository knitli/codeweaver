/// The hk.pkl is the configuration for `hk` <https://hk.jdx.dev>
/// `hk` provides commit and push hooks, but is many times faster than pre-commit and similar tools
/// If you're new to `pkl` see <https://pkl-lang.org/main/current/language-reference/index.html>
amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Builtins.pkl"

local function isCI() = (read?("env:CI")?.toBoolean() ?? false) || (read?("env:GITHUB_ACTIONS")?.toBoolean() ?? false)

local typosFilter = List( "*README", "*.{login,astro,bash,bash_logout,bashrc,browserlistrc,conf,config,csh,css,cts,fish,gitattributes,gitmodules,html,htmx,ini,j2,jinja,jinja2,json,json5,jsonc,jsonl,ksh,md,mdown,mdtext,mdtxt,mdwn,mdx,mk,mkd,mts,nix,nu,pkl,profile,py,quokka,rs,sass,scss,sh,sh,shellcheckrc,sql,sqlite,stylelintrc,svelte,tcsh,toml,ts,tsx,txt,yaml,yml,zlogin,zlogout,zprofile,zsh,zshenv,zshrc}", "*Dockerfile*", "*Makefile*", "*makefile*", "CHANGELOG*", "CODE_OF_CONDUCT*", "CONTRIBUTING*", "HACKING*", "LICENSE", "README*", "SECURITY*", "UNLICENSE").filter((f) -> !f.endsWith("hf_models.json") && !f.contains("external"))

local isBashAndBone = (read?("env:GF_FETCH_U")?.toString() == "bashandbone" ?? false)
local useInteractive = !isCI() && !isBashAndBone

local linters = new Mapping<String, Step> {
    // we don't perform these in CI to reduce download times and cache sizes
    when (!isCI()) {

        ["actionlint"] = (Builtins.actionlint) {
            check = "mise x actionlint -- actionlint {{ files }}"
        }

        ["tombi"] = new Step {
            glob = List("*.toml", "*.toml.*", ".*.toml")
            check = "tombi format --check {{ files }}"
            fix = "tombi format {{ files }}"
            stage = List("*.toml,", "*.toml.*", ".*.toml")
        }
        // yaml

        ["yq"] = new Step {
        glob = List("*.{yaml,yml,json,jsonc}")
        batch = false
        check  = "printf '%s\\n' {{ files }} | xargs -n1 yq -P eval '.' >/dev/null"
        fix = "printf '%s\\n' {{ files }} | xargs -n1 yq -iP --indent=2 '.'"
        stage = List("*.{yaml,yml,json,jsonc}")
        }
    
        ["typos"] = new Step {
            workspace_indicator = "_typos.toml"
            glob = typosFilter
            check = "mise x typos@latest -- typos -j 8 {{ files }}"
            fix = "mise x typos@latest -- typos --write-changes {{ files }}"
            stage = typosFilter
        }
            ["shellcheck"] = new Step {
            batch = true
            glob = List("scripts/{*.sh,*.bash}", "mise-tasks/{*.sh,*.bash}", "packages/**/{*.sh,*.bash}")
            check = "mise x shellcheck@latest -- shellcheck {{ files }}"
        }

            ["shfmt"] = (Builtins.shfmt) {
                stage = Builtins.shfmt.glob
            }

    }

    ["fix-ruff-patterns"] = new Step {
        glob = "src/**/*.py"
        fix = "./scripts/code-quality/fix-ruff-patterns.sh {{ files }}"
        check = "./scripts/code-quality/fix-ruff-patterns.sh --dry-run {{ files }}"
        stage = List("src/**/*.py", "packages/**/*.py", "tests/**/*.py", "scripts/**/*.py", "mise-tasks/**/*.py")
    }

    ["ruff"] = (Builtins.ruff) {
        fix = "ruff check --fix --unsafe-fixes {{ files }} && ruff check --select I --fix {{ files }} && ruff format {{ files }}"
        stage = List("src/**/*.py", "packages/**/*.py", "tests/**/*.py", "scripts/**/*.py", "mise-tasks/**/*.py")
    }

    ["reuse"] = new Step {
        check = "reuse lint"
        interactive = useInteractive
        // this doesn't work ... until we can figure it out, linting only
        fix = if (useInteractive) "./scripts/code-quality/update-licenses.py add {{ files }}" else "./scripts/code-quality/update-licenses.py add --interactive {{ files }}"
    }


    ["add-marks"] = new Step {
        glob = "tests/**/*.py"
        fix = "./scripts/testing/apply-test-marks.py {{ files }}"
    }

    ["validate-lazy-imports"] = new Step {
        glob = "{src,tests}/**/*.py"
        check = "uv run --refresh-package code-weaver mise-tasks/validate-lazy-imports.py {{ files }}"
    }

    // ty typechecker for python
    ["ty"] = new Step {
        glob = "{src,packages,tests,scripts,mise-tasks}/**/*.py"
        check = "ty check {{ files }}"
    }

    ["fix-missing-eol"] = new Step {
        glob = "*.{py,md,txt,toml,ini,cfg,conf,sh,bash,js,ts,tsx,rs,go,java,css,scss,html,xml}"
        check = "hk util end-of-file-fixer {{ files }}"
        fix = "hk util end-of-file-fixer --fix {{ files }}"
        stage = List("*.{py,md,txt,toml,ini,cfg,conf,sh,bash,js,ts,tsx,rs,go,java,css,scss,html,xml}")
    }
    ["check-added-large-files"] = new Step {
        glob = "*"
        check = "hk util check-added-large-files --maxkb 10000 {{ files }}"
    }
    ["check-merge-conflict-markers"] = new Step {
        glob = "*"
        check = "hk util check-merge-conflict --assume-in-merge {{ files }}"
    }
    ["check-python-ast"] = new Step {
        glob = "*.py"
        check = "hk util python-check-ast {{ files }}"
    }
    ["check-trailing-whitespace"] = new Step {
        glob = "*.{py,md,txt,toml,ini,cfg,conf,sh,bash,yml,yaml,json,jsonc,js,ts,tsx,rs,go,java,css,scss,html,xml}"
        check = "hk util trailing-whitespace {{ files }}"
        fix = "hk util trailing-whitespace --fix {{ files }}"
        stage = List("*.{py,md,txt,toml,ini,cfg,conf,sh,bash,yml,yaml,json,jsonc,js,ts,tsx,rs,go,java,css,scss,html,xml}")
    }
    ["check-python-debug-statements"] = new Step {
        glob = "*.py"
        check = "hk util python-debug-statements {{ files }}"
    }
}


hooks {
    ["pre-commit"] {
        fix = true    // automatically modify files with available linter fixes
        steps = linters
    }
    // instead of pre-commit, you can instead define pre-push hooks
    ["pre-push"] {
        steps = linters
    }

    ["fix"] {
        fix = true
        steps = linters
    }
    ["check"] {
        steps = linters
    }
}
